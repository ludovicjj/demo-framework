{% extends 'base.html.twig' %}

{% block title slug %}

{% block body %}
    <h1 class="mb-4">{{ post.name }}</h1>
    <p class="text-muted">
        {% if post.category_id %}
            <a href="{{ path('category.show', {'slug' : post.category_slug}) }}"
               title="{{ post.category_name }}"
            >
                {{ post.category_name }}
            </a><br>
        {% endif %}
        {{ post.created_at | ago }}
    </p>
    <p>{{ post.content| nl2br }}</p>

{% endblock %}
