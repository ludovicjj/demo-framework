{% extends 'base.html.twig' %}

{% block title parent() ~'des articles' %}

{% block body %}
    <h1 class="mb-5">Bienvenue sur le blog</h1>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">
                    {{ post.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}